<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="pagetext"
            type="com.u3coding.playerandrecoder.audiorecoder.RecordPage"/>
    </data>
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.u3coding.playerandrecoder.audiorecoder.RecordAudioActivity">

    <TextView
        android:id="@+id/tv_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@{pagetext.recordText}"
        tools:layout_editor_absoluteX="145dp"
        tools:layout_editor_absoluteY="47dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/bt_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="144dp"
        android:onClick="onClick"
        android:text="@{pagetext.startBtText}"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_record" />

    <Button
        android:id="@+id/bt_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:onClick="onClick"
        android:text="@{pagetext.stopBtText}"
        app:layout_constraintBottom_toBottomOf="@+id/bt_start"
        app:layout_constraintStart_toEndOf="@+id/bt_start" />
</android.support.constraint.ConstraintLayout>
</layout>
