<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.u3coding.audioandvideo">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"/>
        <activity
            android:name=".video.VideoActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".mp4.MediaExAndMuxerActivity" />
        <activity android:name=".opengl.OpenGLES20Activity" />
        <activity android:name="com.u3coding.playerandrecoder.audiorecoder.RecordAudioActivity">

        </activity>
        <activity android:name="com.u3coding.playerandrecoder.videorecoder.VideoActivity"/>
        <activity android:name=".TestActivity"/>
        <activity android:name="com.u3coding.playerandrecoder.videorecoder.ParseH264FileActivity"/>
        <activity android:name="com.u3coding.playerandrecoder.main.PlayerMainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>